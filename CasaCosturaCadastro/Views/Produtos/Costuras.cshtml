@model ICollection<Costura>
@{
    ViewData["Title"] = "Listagem Costura";
}

<div class="row">    
    <div class="col pt-2 mx-3 justify-content-center">
        <h1 class="text-center my-5" style="color: #f06eaa"><b>LISTA DE SERVIÇOS DE COSTURA</b></h1>    
            <div class="table-responsive-sm col-md-12 col-sm-4 px-5">        
                @if(Model.Count > 0){
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th class="col-1">Id</th>
                            <th class="col-2">Resumo</th>
                            <th class="col-1">Nome do Cliente</th>
                            <th class="col-1">Telefone</th>
                            <th class="col-2">Descrição</th>
                            <th class="col-1">Valor (R$)</th>
                            <th class="col-1">Data de Entrega</th>
                            <th class="col-1">Pago na hora</th>
                            <th class="col-1">Entregue</th>
                            <th class="col-1"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Costura c in Model){
                            <tr>
                                <td class="col-1">@c.Id</td>
                                <td class="col-2">@c.Resumo</td>
                                <td class="col-1">@c.Cliente</td>
                                <td class="col-1">@c.Telefone</td>
                                <td class="col-2">@c.Descricao</td>
                                <td class="col-1">@c.Valor</td>
                                <td class="col-1">@c.DataEntrega</td>
                                <td class="col-1">@c.Pago</td>
                                <td class="col-1">@c.Entregue</td>
                                <td class="col-1"><a class="page-link btn btn-light text-white" href="/Produtos/Atualizar/@c.Id" style="background-color: #f06eaa;">Atualizar</a></td>
                            </tr>   
                        }  
                    </tbody>   
                    </table>             
                    }else{    
                        <p class="text-dark">Nenhum serviço registrado!</p>
                    } 
            </div>
    </div>
</div>

<div class="row">
    <ul class="pagination col-12 justify-content-center " style="margin:20px 0">
        @for (int i = 1; i <= (int)ViewData["Pages"]; i++){
            <li class="page-item"><a class="page-link btn btn-light text-white m-2" href="/Produtos/Costuras/?p=@i" style="background-color: #f06eaa;">@i</a></li>
        }
    </ul>
</div>
