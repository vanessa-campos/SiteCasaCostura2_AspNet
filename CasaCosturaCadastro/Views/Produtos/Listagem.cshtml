@model ICollection<Produto>
@{
    ViewData["Title"] = "Listagem Produtos";
}

<div class="row">    
    <div class="col pt-2 mx-3 justify-content-center">
        <h1 class="text-center my-5" style="color: #f06eaa"><b>LISTA DE PRODUTOS EM ESTOQUE</b></h1>
        <div class="table-responsive-sm col-md-12 col-sm-4 px-5">        
            @if(Model.Count > 0){
                <table class="table table-striped text-center">
                    <thead>
                        <tr>
                            <th class="col-1">Id</th>
                            <th class="col-1">Categoria</th>
                            <th class="col-3">Nome</th>
                            <th class="col-3">Descrição</th>
                            <th class="col-1">Tamanho</th>
                            <th class="col-1">Valor (R$)</th>
                            <th class="col-1">Qt</th>
                            <th class="col-1"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Produto p in Model){
                            <tr>
                                <td class="col-1">@p.Id</td>
                                <td class="col-1">
                                    @if(p.Categoria==1){
                                        <p>Tecido</p>
                                    }else{
                                        <p>Aviamento</p>
                                    }
                                </td>
                                <td class="col-3">@p.Nome</td>
                                <td class="col-3">@p.Descricao</td>
                                <td class="col-1">@p.Tamanho</td>
                                <td class="col-1">@p.Valor</td>
                                <td class="col-1">@p.Quantidade</td>
                                <td class="col-1"><a class="page-link btn btn-light text-white" href="/Produtos/Editar/@p.Id" style="background-color: #f06eaa;">Editar</a></td>
                            </tr>   
                        }  
                    </tbody>   
                </table>             
            }else{    
                <p class="text-dark">Nenhum produto registrado!</p>
            } 
        </div>
    </div>
</div>

<div class="row">
    <ul class="pagination col-12 justify-content-center " style="margin:20px 0">
        @for (int i = 1; i <= (int)ViewData["Pages"]; i++){
            <li class="page-item"><a class="page-link btn btn-light text-white m-2" href="/Produtos/Listagem/?p=@i" style="background-color: #f06eaa;">@i</a></li>
        }
    </ul>
</div>
