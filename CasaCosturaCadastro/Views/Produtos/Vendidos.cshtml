@model ICollection<Vendidos>
@{
    ViewData["Title"] = "Listagem Vendidos";
}

<div class="row">    
    <div class="col pt-2 mx-3 justify-content-center">
        <h1 class="text-center my-5" style="color: #f06eaa"><b>LISTA DE PRODUTOS VENDIDOS</b></h1>
        <div class="table-responsive-sm col-md-12 col-sm-4 px-5">        
            @if(Model.Count > 0){
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th class="col-1">Id</th>
                            <th class="col-2">Nome do Produto</th>
                            <th class="col-3">Descrição</th>
                            <th class="col-2">Tamanho</th>
                            <th class="col-1">Valor (R$)</th>
                            <th class="col-1">Qt</th>
                            <th class="col-2">Data Venda</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Vendidos v in Model){
                            <tr>
                                <td class="col-1">@v.Id</td>
                                <td class="col-2">@v.Nome</td>
                                <td class="col-3">@v.Descricao</td>
                                <td class="col-2">@v.Tamanho</td>
                                <td class="col-1">@v.Valor</td>
                                <td class="col-1">@v.Quantidade</td>
                                <td class="col-2">@v.DataVenda</td>
                            </tr>   
                        }  
                    </tbody>   
                </table>             
            }else{    
                <p class="text-dark">Nenhum produto vendido!</p>
            } 
        </div>
    </div>
</div>

<div class="row">
    <ul class="pagination col-12 justify-content-center " style="margin:20px 0">
        @for (int i = 1; i <= (int)ViewData["Pages"]; i++){
            <li class="page-item"><a class="page-link btn btn-light text-white m-2" href="/Produtos/Vendidos/?p=@i" style="background-color: #f06eaa;">@i</a></li>
        }
    </ul>
</div>
