@model ICollection<Usuario>
@{
    ViewData["Title"] = "Listagem de Usuários";
}

<div class="row">    
    <div class="col pt-2 mx-3 justify-content-center">
        <h1 class="text-center my-5" style="color: #f06eaa"><b>USUÁRIOS CADASTRADOS</b></h1>
        <div class="table-responsive-sm col-md-12 col-sm-4">                    
            @if(Model.Count > 0){
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th class="col-1">Tipo</th>                       
                        <th class="col-3">Login</th>
                        <th class="col-3">Senha</th>
                        <th class="col-3">Nome</th>
                        <th class="col-1"></th>
                        <th class="col-1"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Usuario u in Model){
                    <tr>
						@if(u.Tipo == Usuario.ADMIN){
                            <td class="col-1">Administrador</td>
                        }else{
                            <td class="col-1">Padrão</td>
                        }
                        <td class="col-3">@u.Login</td>
                        <td class="col-3">@u.Senha</td>
                        <td class="col-3">@u.Nome</td>  
                        <td class="col-1"><a class="page-link btn btn-light text-white" href="/Usuario/Edicao/@u.Id" style="background-color: #f06eaa;">Editar</a></td>
                        <td class="col-1"><a class="page-link btn btn-light text-white" href="/Usuario/Excluir/@u.Id" style="background-color: #f06eaa;">Excluir</a></td>
                    </tr>
                    }
                </tbody>   
            </table>
            }else{    
                <p>Nenhum registro encontrado!</p>
            }
        </div>
    </div>
</div>


<div class="row">
    <ul class="pagination col-12 justify-content-center " style="margin:20px 0">
        @for (int i = 1; i <= (int)ViewData["Pages"]; i++){
            <li class="page-item"><a class="page-link btn btn-light text-white m-2" href="/Usuario/Listagem/?p=@i" style="background-color: #f06eaa;">@i</a></li>
        }
    </ul>
</div>
