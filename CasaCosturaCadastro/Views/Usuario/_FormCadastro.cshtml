@model Usuario

<div class="row justify-content-md-around pt-3 pb-5">    
    <form asp-action="Cadastro" method="POST" class="col-md-6 col-sm-4">
        <input type="hidden" asp-for="Id" />
        <fieldset>                                  
            <div class="row">         
                <div class="form-group col-md-6 col-sm-12">
                    <label asp-for="Login">Login</label>
                    <input type="email" asp-for="Login" class="form-control" required/>
                </div>
                <div class="form-group col-md-6 col-sm-12">
                   <label asp-for="Senha">Senha</label>
                   <input type="password" asp-for="Senha" class="form-control" required/>
                </div>  
            </div>   
            <div class="row">
                <div class="form-group col-12">
                    <label asp-for="Nome">Nome Completo</label>
                    <input asp-for="Nome" class="form-control" required/>
                </div> 
            </div>   
        </fieldset>
        <input type="submit" value="Salvar"  class="btn btn-light text-white text-start" style="background-color: #f06eaa;"/>
    </form>
</div>